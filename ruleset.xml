<?xml version="1.0" encoding="UTF-8"?>
<ruleset xmlns="https://www.mojohaus.org/VERSIONS/RULE/2.1.0"
    comparisonMethod="maven"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
          https://www.mojohaus.org/VERSIONS/RULE/2.1.0
          https://www.mojohaus.org/versions-maven-plugin/xsd/rule-2.1.0.xsd">

  <rules>

    <rule groupId="org.springframework.cloud"
        artifactId="spring-cloud-starter-parent" comparisonMethod="maven">
      <ignoreVersions>
        <ignoreVersion type="regex">1.0.\d.\w+</ignoreVersion>
      </ignoreVersions>
    </rule>

    <rule groupId="org.projectlombok"
        artifactId="lombok" comparisonMethod="maven">
      <ignoreVersions>
        <ignoreVersion type="regex">1\.18\.2[0-4]</ignoreVersion>
        <ignoreVersion type="regex">1\.18\.1\d</ignoreVersion>
        <ignoreVersion type="regex">1\.18\.\d</ignoreVersion>
        <ignoreVersion type="regex">1\.1[0-7]\.\d+</ignoreVersion>
        <ignoreVersion type="regex">0\.\d+\.\d+(-RC\d)?</ignoreVersion>
      </ignoreVersions>
    </rule>

    <rule groupId="org.openapitools"
        artifactId="openapi-generator-maven-plugin" comparisonMethod="maven">
      <ignoreVersions>
        <ignoreVersion>6.2.1</ignoreVersion>
      </ignoreVersions>
    </rule>

    <rule groupId="org.springframework.boot"
        artifactId="spring-boot-starter-parent" comparisonMethod="maven">
      <ignoreVersions>
        <ignoreVersion type="regex">3[\w.]+</ignoreVersion>
      </ignoreVersions>
    </rule>

  </rules>

  <ignoreVersions>
    <!-- Ignore Alpha's, Beta's, release candidates and milestones -->
    <ignoreVersion type="regex">(?i).*Alpha(?:-?\d+)?</ignoreVersion>
    <ignoreVersion type="regex">(?i).*Beta(?:-?\d+)?</ignoreVersion>
    <ignoreVersion type="regex">(?i).*-B(?:-?\d+)?</ignoreVersion>
    <!--<ignoreVersion type="regex">(?i).*RC(?:-?\d+)?</ignoreVersion>-->
    <ignoreVersion type="regex">(?i).*CR(?:-?\d+)?</ignoreVersion>
    <ignoreVersion type="regex">(?i).*M(?:-?\d+)?</ignoreVersion>

    <ignoreVersion type="regex">(?i).*(java[6,7]|jre[6,7])</ignoreVersion>
  </ignoreVersions>

</ruleset>
